{
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "eslint.options": {
        "ignorePattern": "webpack.config.js",
    },
    "folderTemplates.structures": [
        {
            "name": "React/TS component",
            "structure": [
                {
                    "fileName": "<FTName>.tsx",
                    "template": "Typescript Functional Component"
                },
                {
                    "fileName": "tests/<FTName>.test.js"
                },
                {
                    "fileName": "<FTName>.style.ts",
                    "template": "Styles"
                },
                {
                    "fileName": "index.ts",
                    "template": "IndexFile"
                },
            ]
        }
    ],
    "folderTemplates.fileTemplates": {
        "Typescript Functional Component": [
            "import React from 'react'",
            "import { useStyles } from './<FTName>.style.ts",
            "",
            "interface <FTName>Props {",
            "}",
            "",
            "const <FTName>: React.FC<<FTName>Props> = (props) => {",
            "const styles = useStyles()",
            "  return <div/>",
            "}",
            "",
            "export default <FTName>"
        ],
        "Styles": [
            "import { makeStyles } from '@material-ui/core",
            "",
            "const useStyles = makeStyles({",
            "})",
            "",
            "export { useStyles }"
        ],
        "Indexfile": [
            "import <FTName> from './<FTName>'",
            "export default <FTName>"
        ]
    },
    "eslint.packageManager": "yarn"
}